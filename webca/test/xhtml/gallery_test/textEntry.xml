<?xml version="1.0"?>
<?xml-stylesheet href="../../../xsl/webca.xsl" type="text/xsl"?>

<html xmlns:caml="http://webca.cosylab.com">
      
<head>
    <title>Title!</title>
    <caml:head webcaPath="../../../"/>
</head>
<body>
	
	<caml:verticalPanel width="300px">
		<caml:row>
			<caml:staticText>Test</caml:staticText>			
		</caml:row>
		<caml:row>
			<caml:textEntry controlPV="$(NAME)" />			
		</caml:row>
		<caml:row>
			<caml:textEntry controlPV="$(NAME)" dataType="text" alarmSensitive="foreground" size="small" displayFormat="##0.000"/>			
		</caml:row>
		<caml:row>
			<caml:textEntry controlPV="$(NAME)" dataType="numeric" alarmSensitive="background" size="medium" displayFormat="+0.0"/>			
		</caml:row>
		<caml:row>
			<caml:textEntry controlPV="$(NAME)" dataType="numeric" alarmSensitive="none" size="large" displayFormat="0.0E+00"/>			
		</caml:row>		
	</caml:verticalPanel>
	
</body>
</html>